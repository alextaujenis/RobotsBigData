              span(translate="no") SKETCH
            div(translate="no")
              script(type="syntaxhighlighter", class="brush: arduino; gutter: false;")
                :cdata
                  RBD::WaterSensor water_sensor(2, 3, 3); // send, receive pin, levels

                  void setup() {
                    ...
